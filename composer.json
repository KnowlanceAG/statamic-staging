{
  "name": "statamic/statamic",
  "description": "Statamic",
  "keywords": [
    "statamic",
    "cms",
    "flat file",
    "laravel"
  ],
  "type": "project",
  "require": {
    "php": "^8.0",
    "doublethreedigital/duplicator": "2.3.3",
    "fideloper/proxy": "^4.2",
    "fruitcake/laravel-cors": "^2.0",
    "guzzlehttp/guzzle": "^7.3",
    "laravel/framework": "^9.0",
    "laravel/tinker": "^2.0",
    "optimoapps/statamic-bard-text-align": "1.0.2",
    "samdark/sitemap": "^2.2",
    "spatie/fork": "^1.1",
    "spatie/statamic-responsive-images": "2.14.4",
    "statamic/cms": "3.3.54",
    "statamic/ssg": "1.2.0",
    "uscreen/better-statamic-bard-text-color": "*",
    "uscreen/cpssg": "1.5.12",
    "uscreen/link-extended": "*",
    "withcandour/aardvark-seo": "2.0.30"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "^3.5",
    "spatie/laravel-ignition": "^1.0",
    "mockery/mockery": "^1.3.1",
    "nunomaduro/collision": "^6.1",
    "phpunit/phpunit": "^9.3"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pixelfear/composer-dist-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "pre-update-cmd": [
      "Statamic\\Console\\Composer\\Scripts::preUpdateCmd"
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi",
      "@php artisan statamic:install --ansi"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  },
  "repositories": [
    {
      "type": "path",
      "url": "addons/uscreen/link-extended"
    },
    {
      "type": "vcs",
      "url": "https://gitlab.uscreen.net/uscreen/statamic-addons/cpssg"
    },
    {
      "type": "path",
      "url": "addons/uscreen/better-statamic-bard-text-color"
    }
  ]
}